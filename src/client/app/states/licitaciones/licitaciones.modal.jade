div
	.modal-header
		h3.modal-title Ingrese los datos
	.modal-body
		form(novalidate="", name="formOpcion")
			.row
				.col-md-12
					.form-group
						label(for="nombre") Nombre
						input#nombre.form-control(ng-disabled="disable", ng-model="evento.nombre", type="text", placeholder="Nombre", required="")
					.form-group
						label(for="descripcion") Descripcion
						input#descripcion.form-control(ng-disabled="disable", ng-model="evento.descripcion", type="text", placeholder="descripcion", required="")
					.row.form-group
						.col-md-12
							label Fecha inicio
						.col-md-12.fecha
							select#diaI.form-control(ng-disabled="!dias || disable", ng-options="i for i in dias", ng-model="evento.diaI")
							select#mesI.form-control(ng-disabled="!meses || disable", ng-options="i.id as i.nombre for i in meses", ng-model="evento.mesI")
							select#anioI.form-control(ng-disabled="!anios || disable", ng-options="i for i in anios", ng-model="evento.anioI")
					.row.form-group
						.col-md-12
							label Fecha final
						.col-md-12.fecha
							select#diaF.form-control(ng-disabled="!dias || disable", ng-options="i for i in dias", ng-model="evento.diaF")
							select#mes.form-control(ng-disabled="!meses || disable", ng-options="i.id as i.nombre for i in meses", ng-model="evento.mesF")
							select#anioF.form-control(ng-disabled="!anios || disable", ng-options="i for i in anios", ng-model="evento.anioF")
	.modal-footer
		button.btn.btn-primary(ng-disabled="!formOpcion.$valid && !validarFechas()", ng-click="ok()") Aceptar
		button.btn.btn-warning(ng-click="cancel()") Cancelar
